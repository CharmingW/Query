<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_vertical_spacing_s"
        android:gravity="center_vertical|center"
        android:hint="您想问点什么呢？" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_vertical_spacing"
        android:text="查询"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_query"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/query_item_margin"
        android:layout_marginRight="@dimen/query_item_margin"
        android:layout_marginTop="@dimen/common_vertical_spacing"
        android:gravity="left"
        android:textSize="@dimen/common_text_size" />


</RelativeLayout>
