<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:id="@+id/activity_domain_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/et_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/common_vertical_spacing_l"
        android:gravity="center_vertical|center"
        android:hint="输入域名，如sina.com" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_domain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_vertical_spacing"
        android:text="查询"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_query"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_vertical_spacing"
        android:gravity="left"
        android:textSize="@dimen/common_text_size" />


</RelativeLayout>
